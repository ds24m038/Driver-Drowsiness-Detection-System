# Alarm Manager Dockerfile
FROM python:3.11-slim

# Install UV
RUN pip install uv

# Set working directory
WORKDIR /app

# Copy dependency files
COPY pyproject.toml ./

# Install dependencies using UV
RUN uv pip install --system -e .

# Copy source code
COPY src/ ./src/

# Set PYTHONPATH to include /app
ENV PYTHONPATH=/app

# Run alarm manager
CMD ["python", "-m", "src.alarm_manager.manager"]

